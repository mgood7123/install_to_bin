if [[ ! -e "/bin_world_writable" ]]
    then
        sudo mkdir /bin_world_writable
        sudo chmod 777 /bin_world_writable
fi

if (( $# >= 1 )); then
    src="$(readlink -f "$1")";
    dest="/bin_world_writable/$(basename $src)"
    shift  1;
else
    echo "error: must specify a file"
fi

if [[ -e $dest || -L $dest ]]
    then
        echo "updating symlink: $dest"
        rm "$dest"
fi

ln -sv "$src" "$dest"
